<Window x:Class="PHP_SRePS.NewSale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PHP_SRePS"
        mc:Ignorable="d"
        Title="New Sale" Height="254" Width="314"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- TextBlocks -->
        <TextBlock HorizontalAlignment="Left" Margin="26,35,0,0" TextWrapping="Wrap" Text="Product ID" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="165,35,0,0" TextWrapping="Wrap" Text="Order ID" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,103,0,0" TextWrapping="Wrap" Text="Quantity" VerticalAlignment="Top"/>
        
        <!-- TextBoxes -->
		<TextBox x:Name="productID" HorizontalAlignment="Left" Height="23" Margin="26,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="orderID" HorizontalAlignment="Left" Height="23" Margin="165,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="quantity" HorizontalAlignment="Left" Height="23" Margin="26,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        
        <!-- Buttons-->
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Margin="115
                ,164,0,0" Height="40" Click="AddSale">
            <StackPanel>
                <TextBlock><Run Text="Add Sales"/></TextBlock>
                <Image Source="Images/Add_16x.png" Height="16" Width="16"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
